<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="mb-3 mt-3">
    <label class="form-label">Title</label>
    <input
      class="form-control"
      type="text"
      name="postTitle"
      autocomplete="off"
    />
  </div>
  <div class="mb-3 mt-3">
    <label for="exampleInputPassword1" class="form-label">Post</label>
    <textarea
      class="form-control"
      type="text"
      name="postBody"
      rows="5"
      autocomplete="off"
    ></textarea>
  </div>
  <div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </div>
</form>
<%- include("partials/footer"); -%>
